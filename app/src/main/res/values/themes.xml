<resources>

    <!-- Splash Theme -->
    <style name="Theme.Hagzy.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">#000000</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
    </style>

    <!-- Main App Theme -->
    <style name="Theme.Hagzy" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/Accent</item>
        <item name="colorPrimaryVariant">@color/AccentVariant</item>
        <item name="colorOnPrimary">@color/Background</item>
        <item name="colorSecondary">@color/Accent</item>
        <item name="colorSecondaryVariant">@color/AccentVariant</item>
        <item name="colorOnSecondary">@color/BackgroundSecondary</item>
        <item name="android:statusBarColor">@color/BackgroundSecondary</item>
    </style>

    <!-- No Action Bar Layouts -->
    <style name="Theme.Hagzy.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Hagzy.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.Hagzy.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
